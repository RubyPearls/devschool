<% content_for(:title, "Dev Forum") %>

<h1><%= @chapter.name %></h1>

<% if @chapter.sections.any? %>

<ul>
	<% @chapter.sections.each do |section| %>

  <li>
    <%= section.name %> |
    <%= link_to "Edit", edit_chapter_section_path(@chapter, section) %> |
    <%= link_to "Delete", chapter_section_path(@chapter, section), data: {confirm: "Are you sure?", method: "delete"} %>
 </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no sections yet!</p>
<% end %>

<p><%= link_to "Add a section", new_chapter_section_path(@chapter) %></p>

<p><%= link_to "Edit Chapter", edit_chapter_path(@chapter) %></p>

<p><%= link_to "Delete Chapter", chapter_path(@chapter), data: {confirm: "Are you sure?", method: "delete"} %></p>



